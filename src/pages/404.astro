---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Not Found">
  <div class="flex flex-col items-center justify-center py-20 font-mono">
    <div class="text-red-400 text-6xl font-bold">404</div>
    <div class="mt-4 text-fg-dim">
      <span class="text-accent">$</span> cat page.md
    </div>
    <div class="mt-2 text-red-400 text-sm">
      cat: page.md: No such file or directory
    </div>
    <div class="mt-8 text-xs text-fg-dim">
      The page you're looking for doesn't exist or has been moved.
    </div>
    <div class="mt-6 flex gap-4 text-xs">
      <a href="/" class="text-accent hover:text-accent-hover transition-colors">
        cd ~/blog
      </a>
      <a href="/posts" class="text-accent hover:text-accent-hover transition-colors">
        ls posts/
      </a>
      <a href="/tags" class="text-accent hover:text-accent-hover transition-colors">
        ls tags/
      </a>
    </div>
  </div>
</BaseLayout>
