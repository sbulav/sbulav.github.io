---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatDate } from '../../utils/helpers';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('search')?.toLowerCase() || '';

const filteredPosts = searchQuery
  ? sortedPosts.filter((post) => 
      post.data.title.toLowerCase().includes(searchQuery) ||
      post.data.description?.toLowerCase().includes(searchQuery) ||
      post.body?.toLowerCase().includes(searchQuery)
    )
  : sortedPosts;
---

<BaseLayout title="Posts" description="All blog posts">
  <h1 class="text-2xl font-bold mb-6 flex items-center gap-2">
    <span class="text-accent">$</span> ls posts/
  </h1>
  
  {searchQuery && (
    <p class="mb-4 text-fg/60">
      Showing results for: <span class="text-accent">"{searchQuery}"</span>
      <a href="/posts/" class="ml-2 text-sm">(clear)</a>
    </p>
  )}
  
  <div class="space-y-4">
    {filteredPosts.map((post) => (
      <a 
        href={`/posts/${post.slug}/`}
        class="block post-card"
      >
        <div class="flex items-start justify-between gap-4">
          <h2 class="font-semibold text-lg hover:text-accent transition-colors">
            {post.data.title}
          </h2>
          <time class="text-sm text-fg/50 whitespace-nowrap">
            {formatDate(post.data.date)}
          </time>
        </div>
        
        {post.data.description && (
          <p class="text-fg/60 text-sm mt-2 line-clamp-2">
            {post.data.description}
          </p>
        )}
        
        <div class="flex flex-wrap gap-2 mt-3">
          {post.data.categories.map((cat) => (
            <span class="text-xs text-accent">#{cat}</span>
          ))}
          {post.data.tags.map((tag) => (
            <span class="text-xs text-fg/50">#{tag}</span>
          ))}
        </div>
      </a>
    ))}
  </div>
  
  {filteredPosts.length === 0 && (
    <p class="text-fg/60">No posts found.</p>
  )}
</BaseLayout>
