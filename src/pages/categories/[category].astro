---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import Sidebar from '../../components/Sidebar.astro';
import { sortPostsByDate, getPostSlug, getCategoryCounts } from '../../lib/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const catCounts = getCategoryCounts(posts);

  return [...catCounts.keys()].map(cat => ({
    params: { category: cat },
    props: {
      category: cat,
      posts: sortPostsByDate(
        posts.filter(p =>
          p.data.categories.some((c: string) => c.toLowerCase() === cat)
        )
      ),
    },
  }));
}

const { category, posts } = Astro.props;
---

<BaseLayout title={`Category: ${category}`}>
  <div class="relative">
    <Sidebar />
    <div>
      <div class="mb-6">
        <div class="font-mono text-xs text-fg-dim">
          <span class="text-accent">~/blog/categories</span>
          <span> $ </span>
          <span class="text-fg">ls</span>
          <span class="text-category"> {category}/</span>
        </div>
        <h1 class="mt-3 font-mono text-lg font-bold text-category">{category}/</h1>
        <p class="font-mono text-xs text-fg-dim">{posts.length} posts</p>
      </div>

      <div class="space-y-3">
        {posts.map((post: any) => (
          <PostCard
            title={post.data.title}
            date={post.data.date}
            categories={post.data.categories}
            tags={post.data.tags}
            slug={getPostSlug(post.id, post.data.categories)}
            body={post.body || ''}
          />
        ))}
      </div>

      <div class="mt-8">
        <a
          href="/categories/"
          class="font-mono text-xs text-accent hover:text-accent-hover transition-colors"
        >
          &lt; back to all categories
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
