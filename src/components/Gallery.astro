---
interface GalleryItem {
  name: string;
  icon?: string;
}

interface Props {
  title: string;
  items: GalleryItem[];
}

const { title, items } = Astro.props;
---

<div class="mb-8">
  <h3 class="mb-3 font-mono text-sm font-semibold text-terminal-accent">
    $ ls {title.toLowerCase()}/
  </h3>
  <div class="grid grid-cols-3 gap-2 sm:grid-cols-4 md:grid-cols-6">
    {items.map(item => (
      <div class="flex flex-col items-center gap-1.5 rounded border border-terminal-border bg-terminal-surface/50 p-3 transition-colors hover:border-terminal-accent/50">
        {item.icon && (
          <img
            src={item.icon}
            alt={item.name}
            class="h-8 w-8 object-contain"
            loading="lazy"
          />
        )}
        <span class="text-center font-mono text-[10px] text-terminal-muted">
          {item.name}
        </span>
      </div>
    ))}
  </div>
</div>
